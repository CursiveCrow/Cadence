{
  "name": "cadence",
  "private": true,
  "version": "1.0.0",
  "description": "A streamlined, high-performance, offline-first project management system",
  "main": "apps/desktop/dist-electron/main.js",
  "scripts": {
    "dev": "pnpm -C apps/desktop dev",
    "build": "pnpm -C apps/desktop build",
    "electron": "pnpm -C apps/desktop electron",
    "electron:dev": "pnpm -C apps/desktop electron:dev",
    "electron:dist": "pnpm -C apps/desktop electron:dist",
    "clean": "pnpm -C apps/desktop clean",
    "test": "pnpm -C apps/desktop test || echo 'no tests'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "electron": "^28.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    
    "typescript": "^5.3.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.1",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write"
    ]
  }
}
