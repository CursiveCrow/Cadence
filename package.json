{
  "name": "cadence-simplified",
  "version": "2.0.0",
  "description": "Cadence - Simplified Musical Project Management",
  "main": "dist-electron/main/index.js",
  "author": "Cadence Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx src",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "npm run build && electron-builder",
    "clean": "rimraf dist dist-electron"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "pixi.js": "8.13.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "build": {
    "appId": "com.cadence.app",
    "productName": "Cadence",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
