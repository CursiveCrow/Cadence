{
  "name": "cadence",
  "private": true,
  "version": "1.0.0",
  "description": "A streamlined, high-performance, offline-first project management system",
  "main": "apps/desktop/dist-electron/main.js",
  "scripts": {
    "dev": "pnpm --filter @cadence/desktop dev",
    "build": "turbo run build",
    "build:desktop": "pnpm --filter @cadence/desktop build",
    "electron": "electron .",
    "electron:dev": "pnpm --filter @cadence/desktop electron:dev",
    "electron:dist": "pnpm --filter @cadence/desktop electron:dist",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "turbo": "^1.11.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.1"
}