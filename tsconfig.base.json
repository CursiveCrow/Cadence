{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": [],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@cadence/core": [
        "source/core"
      ],
      "@cadence/core/*": [
        "source/core/*"
      ],
      "@cadence/renderer": [
        "source/renderer"
      ],
      "@cadence/renderer/*": [
        "source/renderer/*"
      ],
      "@cadence/ui": [
        "source/surface/components"
      ],
      "@cadence/ui/*": [
        "source/surface/components/*"
      ]
    }
  }
}
