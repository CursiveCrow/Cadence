{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": [],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@cadence/core": [
        "source/core"
      ],
      "@cadence/core/*": [
        "source/core/*"
      ],
      "@cadence/state": [
        "source/infrastructure/persistence"
      ],
      "@cadence/state/*": [
        "source/infrastructure/persistence/*"
      ],
      "@cadence/crdt": [
        "source/infrastructure/persistence/crdt"
      ],
      "@cadence/crdt/*": [
        "source/infrastructure/persistence/crdt/*"
      ],
      "@cadence/renderer": [
        "source/renderer"
      ],
      "@cadence/renderer/*": [
        "source/renderer/*"
      ],
      "@cadence/platform-services": [
        "source/infrastructure/platform/services"
      ],
      "@cadence/platform-services/*": [
        "source/infrastructure/platform/services/*"
      ],
      "@cadence/ui": [
        "source/surface/components"
      ],
      "@cadence/ui/*": [
        "source/surface/components/*"
      ],
      "@cadence/config": [
        "source/config"
      ],
      "@cadence/config/*": [
        "source/config/*"
      ],
      "@cadence/contracts": [
        "source/infrastructure/platform/contracts"
      ],
      "@cadence/contracts/*": [
        "source/infrastructure/platform/contracts/*"
      ],
      "@cadence/renderer-react": [
        "source/surface/components/renderer-react"
      ],
      "@cadence/renderer-react/*": [
        "source/surface/components/renderer-react/*"
      ],
      "@cadence/fixtures": [
        "source/config/fixtures"
      ],
      "@cadence/fixtures/*": [
        "source/config/fixtures/*"
      ]
    }
  }
}