{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@cadence/core": [
        "packages/core/dist"
      ],
      "@cadence/state": [
        "packages/state/src"
      ],
      "@cadence/crdt": [
        "packages/crdt/dist"
      ],
      "@cadence/renderer": [
        "packages/renderer/dist"
      ],
      "@cadence/platform-services": [
        "packages/platform-services/dist"
      ],
      "@cadence/ui": [
        "packages/ui/dist"
      ],
      "@cadence/config": [
        "packages/config/dist"
      ],
      "@cadence/contracts": [
        "packages/contracts/dist"
      ],
      "@cadence/events": [
        "packages/events/dist"
      ]
    }
  },
  "include": [],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/*.js"
  ]
}