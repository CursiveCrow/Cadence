{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "lib": [
            "es2020",
            "dom",
            "dom.iterable"
        ],
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "types": [],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "baseUrl": "./",
        "paths": {
            "@cadence/core": [
                "../core/dist"
            ],
            "@cadence/config": [
                "../config/dist"
            ]
        },
        "outDir": "./dist",
        "rootDir": "./src",
        "allowSyntheticDefaultImports": true,
        "resolvePackageJsonExports": true,
        "resolvePackageJsonImports": true,
        "incremental": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "strictBuiltinIteratorReturn": true,
        "alwaysStrict": true,
        "useUnknownInCatchVariables": true
    },
    "references": [
        {
            "path": "../config"
        },
        {
            "path": "../core"
        }
    ],
    "files": [
        "./src/config.ts",
        "./src/index.ts",
        "./src/types.d.ts",
        "./src/core/dnd.ts",
        "./src/core/engine.ts",
        "./src/core/panzoom.ts",
        "./src/core/scene.ts",
        "./src/plugins/status-glyph.ts",
        "./src/rendering/dateHeader.ts",
        "./src/rendering/shapes.ts",
        "./src/rendering/grid/gpuGrid.ts",
        "./src/rendering/grid/gridManager.ts",
        "./src/rendering/grid/gridShader.ts",
        "./src/types/context.ts",
        "./src/utils/devlog.ts",
        "./src/utils/layout.ts",
        "./src/utils/resolution.ts",
        "./src/utils/spatial.ts",
        "./src/utils/webgpu-check.ts"
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "C:/Dev/Projects/Cadence/packages/renderer/dist"
    ]
}

