{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@cadence/core": ["../core/dist"],
      "@cadence/renderer": ["../renderer/dist"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/stories/**"
  ],
  "references": [{ "path": "../core" }, { "path": "../renderer" }]
}
