{
  "name": "@cadence/desktop",
  "private": true,
  "version": "0.0.1",
  "description": "Cadence Desktop - Electron app with TypeScript, Vite and React",
  "main": "dist-electron/main.js",
  "author": "Cadence Team",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "vite",
    "electron:pack": "npm run build && npx @electron/packager . Cadence --platform=win32 --arch=x64 --out=../../release --overwrite",
    "electron:dist": "npm run build && electron-builder --win --publish never",
    "electron:dist-all": "npm run build && electron-builder --publish never"
  },
  "dependencies": {
    "@cadence/core": "workspace:*",
    "@cadence/crdt": "workspace:*", 
    "@cadence/platform-services": "workspace:*",
    "@cadence/renderer": "workspace:*",
    "@cadence/state": "workspace:*",
    "@cadence/ui": "workspace:*",

    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.0",
    "@reduxjs/toolkit": "^2.0.1",
    "yjs": "^13.6.10",
    "pixi.js": "^8.12.0",
    "scheduler": "^0.26.0"
  },
  "devDependencies": {
    "@electron/packager": "^18.4.2",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.cadence.app",
    "productName": "Cadence",
    "directories": {
      "buildResources": "assets",
      "output": "../../release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "portable",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
