{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@cadence/core": [
        "../../packages/core/src"
      ],
      "@cadence/renderer": [
        "../../packages/renderer/src"
      ],
      "@cadence/state": [
        "../../packages/state/src"
      ],
      "@cadence/crdt": [
        "../../packages/crdt/src"
      ],
      "@cadence/config": [
        "../../packages/config/src"
      ],
      "@cadence/contracts": [
        "../../packages/contracts/src"
      ],
      "@cadence/platform-services": [
        "../../packages/platform-services/src"
      ],
      "@cadence/fixtures": [
        "../../packages/fixtures/src"
      ],
      "@cadence/ui": [
        "../../packages/ui/src"
      ],
      "@cadence/renderer-react": [
        "../../packages/renderer-react/src"
      ]
    }
  },
  "include": [
    "src",
    "electron"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
