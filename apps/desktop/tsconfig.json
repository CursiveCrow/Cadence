{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@cadence/core": ["src/core"],
      "@cadence/core/*": ["src/core/*"],
      "@cadence/renderer": ["src/renderer"],
      "@cadence/renderer/*": ["src/renderer/*"],
      "@cadence/config": ["src/core/config"],
      "@cadence/contracts": ["src/platform/contracts"],
      "@cadence/platform-services": ["src/platform"],
      "@cadence/state": ["src/surface/state"],
      "@cadence/state/*": ["src/surface/state/*"],
      "@cadence/fixtures": ["src/surface/fixtures"],
      "@cadence/ui": ["src/surface/ui"],
      "@cadence/ui/*": ["src/surface/ui/*"],
      "@cadence/renderer-react": ["src/surface/renderer-react"],
      "@cadence/surface": ["src/surface"]
    }
  },
  "include": ["src", "electron"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
